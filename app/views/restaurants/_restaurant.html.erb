<div class="mt-5 p-3 d-flex justify-content-center">
  <div class="card shadow rounded" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%=restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>
      <% restaurant.reviews.each do |review| %>
      <div class="d-flex justify-content-between">
        <p class="card-text"><%= review.content %></p>
        <p class="card-text"><%= review.rating %> Pts</p>
      </div>
      <% end %>
      <%= link_to "Agregar Review", new_restaurant_review_path(@restaurant), class:"text-decoration-none flex-grow-1" %>
    </div>
  </div>
</div>
